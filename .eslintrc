{
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-mixed-spaces-and-tabs": [
      2
    ],
    "indent": [
      2,
      4
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-console": 0
  },
  "parser": "babel-eslint",
  "plugins": [],
  "env": {
    "es6": true,
    "browser": false,
    "amd": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": false,
    "globalReturn": true
  },
  "extends": "eslint:recommended"
}
